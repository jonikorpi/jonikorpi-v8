!!! 5
- ie_html class: "no-js", lang: "en" do
  %head
    %meta{charset: "utf-8"}
    -#%meta{content: "IE=edge,chrome=1", http-equiv: "X-UA-Compatible"}
    %title
      = 'Joni Korpi'
    
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    
    = stylesheet_link_tag "main"
    = javascript_include_tag "modernizr"
    
    =javascript_include_tag "//use.typekit.net/tdk6ecz.js"
    :javascript
      try{Typekit.load();}catch(e){}

    %link{rel:"shortcut icon", href:"/images/avatar-144.png"}
    %link{rel:"apple-touch-icon", href:"/images/avatar-144.png"}
    %meta{name: "msapplication-TileImage", content: "/images/avatar-144.png"}
    %meta{name: "msapplication-TileColor", content: "#17121c"}
  
  %body
    = yield

    = javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"
    :javascript
      if (typeof jQuery == 'undefined') {
        document.write(unescape("%3Cscript src='/javascripts/jquery.min.js'%3E%3C/script%3E"));
      }
    = javascript_include_tag "main"